{{ ansible_managed | comment }}

format = """
$username\
{% if prompt_hostname is defined and prompt_hostname | length > 0 %}${custom.prompt_hostname}{% else %}$hostname{% endif %}\
$ssh \
$shlvl\
$kubernetes\
$directory\
$git_branch\
$git_commit\
$git_state\
$git_metrics\
$git_status\
$package\
$php\
$python\
$bun\
$terraform\
$memory_usage\
$direnv\
$env_var\
$custom\
$sudo\
$cmd_duration\
$line_break\
$jobs\
$time\
$status\
$os\
$container\
$shell\
$character"""

[username]
style_user = '{{ "yellow bold" if user_config.user == ansible_user else "green bold" }}'
style_root = 'red bold'
format = '[$user]($style)'
show_always = true

[hostname]
ssh_only = false
format = '@[$hostname]({{ starship__host_color | default('bold white') }})($style)'
trim_at = ''
{% if prompt_hostname is defined and prompt_hostname | length > 0 %}
disabled = true

# Custom hostname from host_vars (position after username; not affected by system hostname / cloud-init)
[custom.prompt_hostname]
when = "test -n \"$STARSHIP_PROMPT_HOSTNAME\""
command = "printf '%s' \"$STARSHIP_PROMPT_HOSTNAME\""
format = '@[$output]({{ starship__host_color | default('bold white') }})($style)'
symbol = ""
{% endif %}

[directory]
truncate_to_repo = false
format ='[$path]($style)[$read_only]($read_only_style) '

[git_branch]
format = '[$symbol$branch(:$remote_branch)]($style) '

[os]
format = "[$symbol]($style)"
disabled = false

[package]
format = '[$symbol$version]($style)'

[python]
format = ' [${symbol}${pyenv_prefix}(${version} )(\($virtualenv\) )]($style)'
python_binary = ['.venv/bin/python', '.venv/bin/python3', '.venv/bin/python2']
# Only show python if a requirements.txt, .python-version, or pyproject.toml exists
# This prevents it from running 'python3 --version' in every single folder
detect_extensions = ['py']
detect_files = [
    '.python-version',
    'requirements.txt',
    'pyproject.toml',
    'uv.lock',
]
