# {{ ansible_managed }}

server {
	server_name {{ owncloud__domain }};
	listen 443 ssl;
	listen 443 quic;

	# SSL configuration
	ssl_certificate /etc/letsencrypt/live/{{ owncloud__domain }}/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/{{ owncloud__domain }}/privkey.pem;
	include /etc/letsencrypt/options-ssl-nginx.conf;
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

	# OwnCloud location
	location /owncloud {
		alias {{ owncloud__path }}/;
		index index.php;
		try_files $uri $uri/ /index.php?$args;

		# Disable directory listing
		autoindex off;

		# PHP handling
		location ~ \.php$ {
			fastcgi_pass unix:{{ php_fpm_socket }};
			fastcgi_index index.php;
			fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
			include fastcgi_params;
		}

		# Additional security headers
		add_header X-Content-Type-Options nosniff;
		add_header X-Frame-Options "SAMEORIGIN";
		add_header X-XSS-Protection "1; mode=block";
		add_header X-Robots-Tag none;
		add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
		add_header X-Download-Options noopen;
		add_header X-Permitted-Cross-Domain-Policies none;
	}

	# Logging
	access_log /var/log/nginx/{{ owncloud__domain }}.access.log;
	error_log /var/log/nginx/{{ owncloud__domain }}.error.log warn;
}

server {
	listen 80;
	server_name {{ owncloud__domain }};
	return 301 https://$server_name$request_uri;
}
