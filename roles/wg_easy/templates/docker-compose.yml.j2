{{ ansible_managed | comment }}

services:
  wg-easy:
    container_name: wg-easy
    image: ghcr.io/wg-easy/wg-easy:latest
    environment:
      WG_HOST: "{{ wg_easy__domain }}"
      # $$ is required so docker-compose passes a literal $ to the container (bcrypt hash)
      PASSWORD_HASH: "{{ wg_easy__admin_password_hash | replace('$', '$$') }}"
      # DNS for VPN clients: points to the Docker default bridge gateway (172.17.0.1 = the host)
      # where Pi-hole listens on port 53. Override with wg_easy__default_dns in secrets.
      WG_DEFAULT_DNS: "{{ wg_easy__default_dns | default('172.17.0.1', true) }}"
    volumes:
      - "/opt/wg-easy:/etc/wireguard"
    ports:
      - "51820:51820/udp"
      - "127.0.0.1:{{ wg_easy__web_port }}:51821/tcp"
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    sysctls:
      - net.ipv4.conf.all.src_valid_mark=1
      - net.ipv4.ip_forward=1
    restart: unless-stopped
