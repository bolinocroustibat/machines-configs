# WireGuard domain
wg_easy__domain: 'wireguard.example.com'

# WireGuard web port
wg_easy__web_port: 51821

# DNS for VPN clients. Defaults to 172.17.0.1 (Docker default bridge gateway = the host)
# where Pi-hole listens on port 53. Set wg_easy__default_dns to override.
# wg_easy__default_dns: "1.1.1.1"

# WireGuard admin interface password hash (bcrypt)
# Generate with: uv run python3 -c 'import bcrypt; print(bcrypt.hashpw(b"your_password", bcrypt.gensalt()).decode())'
# If the password contains $, use single quotes around the -c argument (as above) or escape: \$
wg_easy__admin_password_hash: '$2b$12$your_bcrypt_hash_here'
