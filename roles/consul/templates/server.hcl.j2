datacenter = "dc1"
data_dir = "/opt/consul"
log_level = "INFO"
node_name = "{{ inventory_hostname }}"
server = true
bootstrap_expect = 2
ui = true
client_addr = "0.0.0.0"

acl {
  enabled = true
  default_policy = "deny"
  down_policy = "extend-cache"
  tokens {
    master = "{{ consul_admin_password }}"
  }
}

ports {
  http = 8500
  https = 8501
  grpc = 8502
  dns = 8600
  serf_lan = 8301
  serf_wan = 8302
  server = 8300
}
