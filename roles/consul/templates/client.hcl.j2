datacenter = "dc1"
data_dir = "/opt/consul"
log_level = "INFO"
node_name = "{{ inventory_hostname }}"
server = false
client_addr = "0.0.0.0"

retry_join = [{% for server in consul__servers %}"{{ server }}"{% if not loop.last %}, {% endif %}{% endfor %}]

acl {
  enabled = true
  default_policy = "deny"
  down_policy = "extend-cache"
  tokens {
    agent = "{{ consul__admin_password }}"
  }
}

ports {
  http = 8500
  https = 8501
  grpc = 8502
  dns = 8600
}
